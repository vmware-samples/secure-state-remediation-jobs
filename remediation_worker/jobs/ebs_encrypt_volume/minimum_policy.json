{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EncryptEBS",
            "Effect": "Allow",
            "Action": [
                "ec2:StartInstances",
                "ec2:StopInstances",
                "ec2:AttachVolume",
                "ec2:DetachVolume",
                "ec2:CreateVolume",
                "ec2:CreateSnapshot",
                "ec2:DeleteSnapshot",
                "ec2:CreateTags"
            ],
            "Resource": "*"
        }
    ]
}
